{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
  "types": [
    "node",
    "vue"
  ],
  "paths": {
    "@/*": [
      "src/*"
    ]
  },
    "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
    ]
      },
    "include": [
    "src/**/*.json",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
    ],
    "exclude": [
    "node_modules",
    "dist"
    ]
}
